package area.guias.pfc;

import java.util.Vector;

import android.graphics.Bitmap;

public interface AlmacenAplicaciones {
	// metodo1
			public void guardarAplicacion(Aplicacion aplicacion);
			// metodo2
			public void borrarAplicacion();
			// metodo3 -> el parámetro cantidad indica el numero maximo de guias que ha de devolver
		    public Vector<Aplicacion> listaAplicaciones();
		    // set image
		    public void setImage(int id, Bitmap imagen);
			void borrarLista();
}
