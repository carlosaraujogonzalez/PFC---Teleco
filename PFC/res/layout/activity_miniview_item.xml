<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/miniview_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_box_white"
        android:descendantFocusability="blocksDescendants" >
        
        <RelativeLayout 
            android:background="@null"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:layout_marginRight="10dp"
    		android:layout_marginLeft="5dp"
    		android:padding="2dp">
        
            <View 
       	 		android:background="@color/grey_eduarea"
  				android:id="@+id/lineaHorizontal1"
  				android:layout_width="match_parent"
  				android:layout_height="2dp"  				
  				android:layout_below="@+id/checkBox_ami"  
        		android:layout_marginTop="5dp"
        		android:layout_marginBottom="2dp">
  			</View>
  			
        	<ImageButton
        		android:id="@+id/imageButton"
        		android:layout_width="100dp"
        		android:layout_height="100dp"
        		android:layout_margin="1dp"
        		android:layout_below="@+id/lineaHorizontal1"  
        		android:background="@null"
        		android:src="@drawable/imagen"
        		android:contentDescription="@string/activity"
        		android:scaleType="fitXY"
        		android:adjustViewBounds="true"
        		android:paddingBottom="2dp" />
        
        	<TextView
        		android:id="@+id/activity_title"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textAppearance="?android:attr/textAppearanceSmall"   
        		android:textStyle="bold"   
        		android:layout_below="@+id/lineaHorizontal1"
        		android:layout_toRightOf="@+id/imageButton"
        		android:hint="@string/title"/>
    
    		<TextView
        		android:id="@+id/activity_short_description"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:textAppearance="?android:attr/textAppearanceSmall"     
        		android:layout_below="@+id/activity_title"    
        		android:layout_toRightOf="@+id/imageButton"  
        		android:layout_marginTop="2dp"           
        		android:hint="@string/description"/>
    
    		<TextView
        		android:id="@+id/activity_keywords"
        		android:layout_width="match_parent"
        		android:layout_height="20dp"
        		android:textAppearance="?android:attr/textAppearanceSmall"     
        		android:layout_below="@+id/imageButton"    
        		android:layout_alignRight="@+id/imageButton"  
        		android:layout_alignLeft="@+id/imageButton"  
        		android:layout_marginTop="3dp"           
        		android:hint="@string/keywords"/>
    
  	  		<ImageView
        		android:id="@+id/activity_private"
        		android:layout_width="15dp"
        		android:layout_height="15dp"
        		android:layout_alignLeft="@+id/imageButton"
        		android:layout_below="@+id/activity_keywords"
        		android:src="@drawable/padlock"
        		android:contentDescription="@string/privat"
       		 	android:scaleType="fitXY"
        		android:adjustViewBounds="true"
        		android:layout_marginTop="5dp" 
        		android:layout_marginLeft="2dp"  
        		android:paddingBottom="2dp" />
    
    		<View 
       	 		android:background="@color/grey_eduarea"
  				android:id="@+id/lineaHorizontal"
  				android:layout_height="2dp"
  				android:layout_width="fill_parent"
  				android:layout_below="@+id/activity_private"
        		android:layout_marginTop="5dp">
  			</View>
  	
   			<LinearLayout
        		android:orientation="horizontal"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_below="@+id/lineaHorizontal"
        		android:layout_marginTop="2dp">

        		<ImageView
        			android:id="@+id/commentButton"
        			android:contentDescription="@string/comment"
        			android:layout_width="20dp"
        			android:layout_height="20dp"  
        			android:layout_weight="1"  
        			android:drawSelectorOnTop="true"
       				android:src="@drawable/comment"/>
   	    
   				<ImageView
        			android:id="@+id/shareButton"
        			android:contentDescription="@string/share"
        			android:layout_width="20dp"
        			android:layout_height="20dp"  
        			android:layout_weight="1" 
        			android:drawSelectorOnTop="true"
        			android:src="@drawable/share"/>
   				
        	</LinearLayout>
   			
   			<CheckBox
        	    android:id="@+id/checkBox_ami"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignParentLeft="true"
        	    android:text="@string/add"
        	    android:textAppearance="?android:attr/textAppearanceSmall"/> 
        	    
    		</RelativeLayout>
    		
        	
        	
    		
    </FrameLayout>