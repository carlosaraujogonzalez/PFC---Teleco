<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/blue_clair_dialog"
    	android:layout_gravity="center"
    	android:descendantFocusability="blocksDescendants" >	    		
        		
		    <ImageView
        		android:id="@+id/image"
        		android:contentDescription="@+id/image"
        		android:layout_width="100dp"
        		android:layout_height="50dp"
        		android:layout_centerHorizontal="true"
        		android:scaleType="centerInside"
        		android:layout_margin="5dp"
        		android:src="@drawable/icono" />    
        	
    		<TextView
        		android:id="@+id/message"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		android:maxLines="4"
        		android:layout_below="@+id/image"
        		android:layout_margin="5dp"
        		android:hint="@string/message"
        		android:textColorHint="@color/white_eduarea"
        		android:textColor="@color/white_eduarea"
        		android:textSize="18sp"
        		android:textAppearance="?android:attr/textAppearanceSmall" />
    		
    		<View 
    		    android:id="@+id/horizontalLine"
       			android:background="@color/black_eduarea"
  				android:layout_height="1dp"
  				android:layout_width="wrap_content"
  				android:layout_below="@+id/message"  
        		android:layout_marginTop="3dp"
        		android:layout_marginBottom="3dp">
        	</View>
    		
    		<LinearLayout
        		android:orientation="horizontal"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_margin="3dp"
        		android:layout_below="@+id/horizontalLine">

        		<Button
        			android:id="@+id/yes"
        			android:layout_width="match_parent"
        			android:layout_height="40dp"  
        			android:layout_margin="2dp"
        			android:layout_weight="1"  
        			android:text="@string/yes"
        			android:drawSelectorOnTop="true"
       				android:background="@drawable/orange_button_list_selector"/>
   	    
   				<Button
        			android:id="@+id/no"
        			android:layout_width="match_parent"
        			android:layout_height="40dp"  
        			android:layout_margin="2dp"
        			android:layout_weight="1" 
        			android:text="@string/no"
        			android:drawSelectorOnTop="true"
        			android:background="@drawable/orange_button_list_selector"/>
   				
        	</LinearLayout>
        	
	</RelativeLayout>
